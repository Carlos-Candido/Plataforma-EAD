@using Microsoft.AspNetCore.Identity
@using PlataformaEAD.Models
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PlataformaEAD</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --color-primary: #0FC2C0;
            --color-secondary: #0CABA8;
            --color-tertiary: #008F8C;
            --color-dark: #015958;
            --color-darker: #023535;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* ========== SIDEBAR ========== */
        .sidebar {
            width: 280px;
            background: var(--color-darker);
            color: #fff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 5px 0 20px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
            z-index: 1000;
            overflow-y: auto;
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: var(--color-dark);
            border-radius: 10px;
        }

        .sidebar-header {
            padding: 35px 25px;
            background: var(--color-dark);
            text-align: center;
            border-bottom: 3px solid var(--color-primary);
            position: relative;
        }

        .sidebar-header::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: var(--color-primary);
            box-shadow: 0 0 10px var(--color-primary);
        }

        .sidebar-header h4 {
            margin: 15px 0 0 0;
            font-weight: 700;
            font-size: 1.6rem;
            color: white;
            letter-spacing: 0.5px;
        }

        .sidebar-header i {
            font-size: 3rem;
            color: var(--color-primary);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .sidebar-menu {
            padding: 25px 0;
        }

        .sidebar a {
            color: white;
            display: flex;
            align-items: center;
            padding: 16px 25px;
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
            font-weight: 500;
            position: relative;
        }

        .sidebar a::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 0;
            height: 0;
            background: var(--color-primary);
            transition: all 0.3s ease;
            opacity: 0;
        }

        .sidebar a:hover, .sidebar a.active {
            background: var(--color-dark);
            border-left-color: var(--color-primary);
            padding-left: 35px;
            color: white;
        }

        .sidebar a:hover::before, .sidebar a.active::before {
            width: 4px;
            height: 100%;
            opacity: 1;
        }

        .sidebar a i {
            margin-right: 15px;
            width: 24px;
            text-align: center;
            color: var(--color-primary);
            font-size: 1.2rem;
        }

        .sidebar-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 25px;
            background: var(--color-dark);
            border-top: 2px solid var(--color-darker);
        }

        .user-info {
            display: flex;
            align-items: center;
            padding: 18px;
            background: rgba(15, 194, 192, 0.12);
            border-radius: 12px;
            margin-bottom: 15px;
            border: 2px solid rgba(15, 194, 192, 0.3);
            transition: all 0.3s ease;
        }

        .user-info:hover {
            background: rgba(15, 194, 192, 0.18);
            border-color: var(--color-primary);
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--color-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 14px;
            font-size: 1.3rem;
            color: white;
            box-shadow: 0 4px 12px rgba(15, 194, 192, 0.4);
            flex-shrink: 0;
        }

        .user-details {
            flex: 1;
            min-width: 0;
        }

        .user-details small {
            color: white;
            display: block;
        }

        .user-details .user-name {
            font-weight: 700;
            font-size: 0.95rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-details .user-email {
            opacity: 0.8;
            font-size: 0.85rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .btn-logout {
            background: #dc3545;
            color: white;
            border: none;
            width: 100%;
            padding: 13px;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }

        .btn-logout:hover {
            background: #c82333;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(220, 53, 69, 0.4);
        }

        .btn-logout i {
            margin-right: 8px;
        }

        /* ========== CONTEÚDO PRINCIPAL ========== */
        .main-content {
            margin-left: 280px;
            padding: 35px;
            min-height: 100vh;
            background: #f0f4f8;
        }

        /* ========== ESTILOS GLOBAIS ========== */
        .page-header {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
            border-left: 5px solid var(--color-primary);
        }

        .page-header h1 {
            margin: 0;
            color: var(--color-darker);
            font-weight: 700;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            transition: all 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
        }

        .table {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }

        .table thead {
            background: var(--color-primary);
            color: white;
        }

        .table tbody tr {
            color: var(--color-darker);
        }

        .table tbody tr:hover {
            background: rgba(15, 194, 192, 0.05);
        }

        .btn-primary {
            background: var(--color-primary);
            border: none;
            color: white;
            font-weight: 600;
        }

        .btn-primary:hover {
            background: var(--color-secondary);
            color: white;
        }

        .btn-success {
            background: var(--color-tertiary);
            border: none;
            color: white;
        }

        .btn-success:hover {
            background: var(--color-dark);
            color: white;
        }

        .btn-info {
            background: var(--color-secondary);
            border: none;
            color: white;
        }

        .btn-info:hover {
            background: var(--color-primary);
            color: white;
        }

        .btn-warning {
            background: #ffc107;
            border: none;
            color: var(--color-darker);
            font-weight: 600;
        }

        .btn-danger {
            background: #dc3545;
            border: none;
            color: white;
        }

        .form-control {
            border: 2px solid #e0e7ee;
            border-radius: 8px;
            padding: 10px 15px;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 0.2rem rgba(15, 194, 192, 0.25);
        }

        .form-label {
            color: var(--color-darker);
            font-weight: 600;
        }

        /* ========== RESPONSIVE ========== */
        @@media (max-width: 768px) {
            .sidebar {
                width: 260px;
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-graduation-cap"></i>
            <h4>Plataforma EAD</h4>
        </div>

        <div class="sidebar-menu">
            <a asp-controller="Home" asp-action="Index" class="nav-link">
                <i class="fas fa-home"></i>Dashboard
            </a>
            <a asp-controller="Aluno" asp-action="Index" class="nav-link">
                <i class="fas fa-users"></i>Alunos
            </a>
            <a asp-controller="Curso" asp-action="Index" class="nav-link">
                <i class="fas fa-book"></i>Cursos
            </a>
            <a asp-controller="Matricula" asp-action="Index" class="nav-link">
                <i class="fas fa-clipboard-list"></i>Matrículas
            </a>
        </div>

        <div class="sidebar-footer">
            @if (SignInManager.IsSignedIn(User))
            {
                var usuario = await UserManager.GetUserAsync(User);
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="user-details">
                        <small class="user-name">@usuario?.NomeCompleto</small>
                        <small class="user-email">@usuario?.Email</small>
                    </div>
                </div>
                <form asp-controller="Conta" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-logout">
                        <i class="fas fa-sign-out-alt"></i>Sair
                    </button>
                </form>
            }
        </div>
    </nav>

    <!-- Conteúdo principal -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
