@model PlataformaEAD.Models.Curso
@{
    ViewData["Title"] = "Detalhes do Curso";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid var(--color-tertiary);
    }

    .page-header-custom h1 {
        color: var(--color-darker);
        margin: 0;
        font-weight: 700;
    }

    .details-container {
        background: var(--color-darker);
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .detail-row {
        display: flex;
        padding: 15px 0;
        border-bottom: 1px solid var(--color-dark);
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 700;
        color: var(--color-secondary);
        min-width: 180px;
    }

    .detail-value {
        color: white;
        flex: 1;
    }

    .btn-warning {
        background: #ffc107;
        border: none;
        color: var(--color-darker);
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-warning:hover {
        background: #ffb300;
        color: var(--color-darker);
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-book me-2" style="color: var(--color-tertiary);"></i>Detalhes do Curso</h1>
</div>

<div class="details-container">
    <div class="detail-row">
        <div class="detail-label">ID:</div>
        <div class="detail-value">@Model.Id</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Título:</div>
        <div class="detail-value">@Model.Titulo</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Descrição:</div>
        <div class="detail-value">@Model.Descricao</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Carga Horária:</div>
        <div class="detail-value">@Model.CargaHoraria horas</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Preço:</div>
        <div class="detail-value">R$ @Model.PrecoBase.ToString("N2")</div>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
        <i class="fas fa-edit me-2"></i>Editar
    </a>
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
</div>
