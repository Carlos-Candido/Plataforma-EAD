@model IEnumerable<PlataformaEAD.Models.Curso>
@{
    ViewData["Title"] = "Cursos";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid var(--color-secondary);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header-custom h1 {
        color: var(--color-darker);
        margin: 0;
        font-weight: 700;
    }

    .search-box {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .table thead {
        background: var(--color-secondary);
    }

    .table thead th {
        color: white;
        font-weight: 600;
        border: none;
        padding: 15px;
    }

    .table tbody td {
        color: white;
        padding: 15px;
        vertical-align: middle;
        background: var(--color-darker);
    }

    .table tbody tr {
        border-bottom: 1px solid var(--color-dark);
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    .table tbody tr:hover td {
        background: var(--color-dark);
    }

    .btn-primary {
        background: var(--color-secondary);
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background: var(--color-tertiary);
    }

    .btn-info {
        background: var(--color-primary);
        border: none;
        color: white;
    }

    .btn-info:hover {
        background: var(--color-secondary);
    }

    .btn-warning {
        background: #ffc107;
        border: none;
        color: var(--color-darker);
    }

    .btn-danger {
        background: #dc3545;
        border: none;
        color: white;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-book me-2" style="color: var(--color-secondary);"></i>Cursos</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus me-2"></i>Novo Curso
    </a>
</div>

<div class="search-box">
    <form asp-action="Index" method="get" class="d-flex gap-2">
        <input type="text" name="search" value="@ViewData["CurrentFilter"]" 
               placeholder="Buscar curso..." class="form-control" style="max-width: 300px;" />
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search me-2"></i>Buscar
        </button>
    </form>
</div>

<div class="table-container">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Carga Horária</th>
                <th>Preço</th>
                <th style="width: 280px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Titulo</td>
                    <td>@curso.Descricao</td>
                    <td>@curso.CargaHoraria h</td>
                    <td>R$ @curso.PrecoBase.ToString("N2")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@curso.Id">
                            <i class="fas fa-eye me-1"></i>Detalhes
                        </a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@curso.Id">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@curso.Id">
                            <i class="fas fa-trash me-1"></i>Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
