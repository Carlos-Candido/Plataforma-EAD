@model IEnumerable<PlataformaEAD.Models.Matricula>
@{
    ViewData["Title"] = "Matrículas";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid var(--color-tertiary);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header-custom h1 {
        color: var(--color-darker);
        margin: 0;
        font-weight: 700;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .table thead {
        background: var(--color-tertiary);
    }

    .table thead th {
        color: white;
        font-weight: 600;
        border: none;
        padding: 15px;
    }

    .table tbody td {
        color: white;
        padding: 15px;
        vertical-align: middle;
        background: var(--color-darker);
    }

    .table tbody tr {
        border-bottom: 1px solid var(--color-dark);
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    .table tbody tr:hover td {
        background: var(--color-dark);
    }

    .badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 600;
    }

    .badge-ativo {
        background: var(--color-primary);
        color: white;
    }

    .badge-concluido {
        background: #28a745;
        color: white;
    }

    .badge-cancelado {
        background: #dc3545;
        color: white;
    }

    .btn-primary {
        background: var(--color-tertiary);
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background: var(--color-dark);
    }

    .btn-info {
        background: var(--color-primary);
        border: none;
        color: white;
    }

    .btn-info:hover {
        background: var(--color-secondary);
    }

    .btn-warning {
        background: #ffc107;
        border: none;
        color: var(--color-darker);
    }

    .btn-danger {
        background: #dc3545;
        border: none;
        color: white;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-clipboard-list me-2" style="color: var(--color-tertiary);"></i>Matrículas</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus me-2"></i>Nova Matrícula
    </a>
</div>

<div class="table-container">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Aluno</th>
                <th>Curso</th>
                <th>Data</th>
                <th>Preço Pago</th>
                <th>Progresso</th>
                <th>Nota Final</th>
                <th>Status</th>
                <th style="width: 280px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var matricula in Model)
            {
                <tr>
                    <td>@matricula.Aluno?.Nome</td>
                    <td>@matricula.Curso?.Titulo</td>
                    <td>@matricula.Data.ToString("dd/MM/yyyy")</td>
                    <td>R$ @matricula.PrecoPago.ToString("N2")</td>
                    <td>@matricula.Progresso%</td>
                    <td>@(matricula.NotaFinal?.ToString("N1") ?? "N/A")</td>
                    <td>
                        @if (matricula.Status.ToString() == "Ativo" || matricula.Status.ToString() == "ATIVO")
                        {
                            <span class="badge badge-ativo">Ativo</span>
                        }
                        else if (matricula.Status.ToString() == "Concluido" || matricula.Status.ToString() == "CONCLUIDO")
                        {
                            <span class="badge badge-concluido">Concluído</span>
                        }
                        else
                        {
                            <span class="badge badge-cancelado">Cancelado</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-alunoId="@matricula.AlunoId" asp-route-cursoId="@matricula.CursoId">
                            <i class="fas fa-eye me-1"></i>Detalhes
                        </a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-alunoId="@matricula.AlunoId" asp-route-cursoId="@matricula.CursoId">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-alunoId="@matricula.AlunoId" asp-route-cursoId="@matricula.CursoId">
                            <i class="fas fa-trash me-1"></i>Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
