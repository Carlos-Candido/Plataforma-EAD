@model PlataformaEAD.Models.Matricula

@{
    ViewData["Title"] = "Detalhes da Matrícula";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid var(--color-primary);
    }

    .page-header-custom h1 {
        color: var(--color-darker);
        margin: 0;
        font-weight: 700;
    }

    .details-container {
        background: var(--color-darker);
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .detail-row {
        display: flex;
        padding: 15px 0;
        border-bottom: 1px solid var(--color-dark);
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 700;
        color: var(--color-primary);
        min-width: 180px;
    }

    .detail-value {
        color: white;
        flex: 1;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 600;
    }

    .status-ativo {
        background: var(--color-primary);
        color: white;
    }

    .status-concluido {
        background: #28a745;
        color: white;
    }

    .status-cancelado {
        background: #dc3545;
        color: white;
    }

    .btn-warning {
        background: #ffc107;
        border: none;
        color: var(--color-darker);
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-warning:hover {
        background: #ffb300;
        color: var(--color-darker);
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-clipboard-list me-2" style="color: var(--color-primary);"></i>Detalhes da Matrícula</h1>
</div>

<div class="details-container">
    <div class="detail-row">
        <div class="detail-label">Aluno:</div>
        <div class="detail-value">@Model.Aluno?.Nome</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Curso:</div>
        <div class="detail-value">@Model.Curso?.Titulo</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Data de Matrícula:</div>
        <div class="detail-value">@Model.Data.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Preço Pago:</div>
        <div class="detail-value">R$ @Model.PrecoPago.ToString("N2")</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Progresso:</div>
        <div class="detail-value">@Model.Progresso%</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Nota Final:</div>
        <div class="detail-value">@(Model.NotaFinal?.ToString("N1") ?? "N/A")</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Status:</div>
        <div class="detail-value">
            @if (Model.Status.ToString() == "Ativo")
            {
                <span class="status-badge status-ativo">Ativo</span>
            }
            else if (Model.Status.ToString() == "Concluido")
            {
                <span class="status-badge status-concluido">Concluído</span>
            }
            else
            {
                <span class="status-badge status-cancelado">Cancelado</span>
            }
        </div>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-warning" asp-action="Edit" asp-route-alunoId="@Model.AlunoId" asp-route-cursoId="@Model.CursoId">
        <i class="fas fa-edit me-2"></i>Editar
    </a>
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
</div>
