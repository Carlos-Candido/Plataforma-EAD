@model PlataformaEAD.Models.Matricula

@{
    ViewData["Title"] = "Nova Matrícula";
}

    <style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid var(--color-tertiary);
    }

    .page-header-custom h1 {
        color: var(--color-darker);
        margin: 0;
        font-weight: 700;
    }

    .form-container {
        background: white;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        max-width: 100%;
        overflow: visible;
    }

    .form-label {
        color: var(--color-darker);
        font-weight: 600;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border: 2px solid #e0e7ee;
        border-radius: 8px;
        padding: 10px 15px;
        color: var(--color-darker);
        width: 100%;
        position: relative;
        z-index: 1;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--color-tertiary);
        box-shadow: 0 0 0 0.2rem rgba(0, 143, 140, 0.25);
        z-index: 2;
    }

    /* Select múltiplo estilizado */
    .curso-multiselect {
        border: 2px solid #e0e7ee;
        border-radius: 8px;
        padding: 10px;
        background: white;
        color: var(--color-darker);
        width: 100%;
        min-height: 200px;
        max-height: 300px;
        overflow-y: auto;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .curso-multiselect:focus {
        border-color: var(--color-tertiary);
        box-shadow: 0 0 0 0.2rem rgba(0, 143, 140, 0.25);
        outline: none;
    }

    .curso-multiselect option {
        padding: 12px 15px;
        border-radius: 6px;
        margin-bottom: 5px;
        cursor: pointer;
        transition: all 0.2s ease;
        background: #f8f9fa;
        color: var(--color-darker);
        font-weight: 500;
    }

    .curso-multiselect option:hover {
        background: #e9ecef;
    }

    .curso-multiselect option:checked {
        background: linear-gradient(135deg, var(--color-tertiary) 0%, var(--color-dark) 100%);
        color: white;
        font-weight: 600;
    }

    .curso-multiselect::-webkit-scrollbar {
        width: 8px;
    }

    .curso-multiselect::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .curso-multiselect::-webkit-scrollbar-thumb {
        background: var(--color-tertiary);
        border-radius: 10px;
    }

    .curso-multiselect::-webkit-scrollbar-thumb:hover {
        background: var(--color-dark);
    }

    .btn-primary {
        background: var(--color-tertiary);
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-primary:hover {
        background: var(--color-dark);
        color: white;
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }

    .alert {
        border-radius: 12px;
        margin-bottom: 20px;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 5px;
    }

    .text-muted {
        color: #6c757d;
    }

    .form-select-wrapper {
        position: relative;
        z-index: 1;
        margin-bottom: 20px;
    }

    .helper-text {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 8px;
        padding: 10px 15px;
        background: #e8f4f8;
        border-left: 4px solid var(--color-primary);
        border-radius: 6px;
    }

    .helper-text i {
        color: var(--color-primary);
        font-size: 1.1rem;
    }

    .helper-text span {
        color: var(--color-dark);
        font-size: 0.9rem;
        font-weight: 500;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-user-plus me-2" style="color: var(--color-tertiary);"></i>Nova Matrícula</h1>
</div>

<div class="form-container">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
        }

        <div class="mb-3 form-select-wrapper">
            <label class="form-label"><i class="fas fa-user me-2"></i>Aluno</label>
            @Html.DropDownList("alunoId", (SelectList)ViewBag.Alunos, "Selecione um aluno", new { @class = "form-select", required = "required" })
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-book me-2"></i>Cursos</label>
            <select name="cursosSelecionados" class="curso-multiselect" multiple required>
                @if (ViewBag.Cursos != null)
                {
                    @foreach (var curso in (SelectList)ViewBag.Cursos)
                    {
                        <option value="@curso.Value">@curso.Text</option>
                    }
                }
            </select>
            <div class="helper-text">
                <i class="fas fa-info-circle"></i>
                <span>Segure <strong>Ctrl</strong> (Windows) ou <strong>Cmd</strong> (Mac) para selecionar múltiplos cursos</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Data" class="form-label"><i class="fas fa-calendar me-2"></i>Data</label>
                <input asp-for="Data" type="datetime-local" class="form-control" required />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="PrecoPago" class="form-label"><i class="fas fa-dollar-sign me-2"></i>Preço Pago (R$)</label>
                <input asp-for="PrecoPago" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" required />
                <span asp-validation-for="PrecoPago" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Progresso" class="form-label"><i class="fas fa-chart-line me-2"></i>Progresso (%)</label>
                <input asp-for="Progresso" type="number" min="0" max="100" class="form-control" placeholder="0" value="0" required />
                <span asp-validation-for="Progresso" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-4 form-select-wrapper">
                <label asp-for="Status" class="form-label"><i class="fas fa-check-circle me-2"></i>Status</label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<PlataformaEAD.Models.Enums.Status>()" required>
                    <option value="">Selecione o status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salvar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}