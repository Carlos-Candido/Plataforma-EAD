@model PlataformaEAD.Models.Aluno
@{
    ViewData["Title"] = "Excluir Aluno";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid #dc3545;
    }

    .page-header-custom h1 {
        color: #dc3545;
        margin: 0;
        font-weight: 700;
    }

    .alert-custom {
        background: #fff3cd;
        border-left: 5px solid #ffc107;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
        color: var(--color-darker);
        font-weight: 600;
    }

    .details-container {
        background: var(--color-darker);
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .detail-row {
        display: flex;
        padding: 15px 0;
        border-bottom: 1px solid var(--color-dark);
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 700;
        color: var(--color-primary);
        min-width: 150px;
    }

    .detail-value {
        color: white;
        flex: 1;
    }

    .btn-danger {
        background: #dc3545;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-exclamation-triangle me-2"></i>Excluir Aluno</h1>
</div>

<div class="alert-custom">
    <i class="fas fa-exclamation-circle me-2"></i>
    Tem certeza que deseja excluir este aluno? Esta ação não pode ser desfeita.
</div>

<div class="details-container">
    <div class="detail-row">
        <div class="detail-label">Nome:</div>
        <div class="detail-value">@Model.Nome</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Email:</div>
        <div class="detail-value">@Model.Email</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Telefone:</div>
        <div class="detail-value">@Model.Telefone</div>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Confirmar Exclusão
        </button>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fas fa-times me-2"></i>Cancelar
        </a>
    </div>
</form>
