@model PlataformaEAD.Models.Aluno
@{
    ViewData["Title"] = "Editar Aluno";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .page-header-custom {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        border-left: 5px solid var(--color-secondary);
    }

    .page-header-custom h1 {
        color: var(--color-darker);
        margin: 0;
        font-weight: 700;
    }

    .form-container {
        background: white;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
    }

    .form-label {
        color: var(--color-darker);
        font-weight: 600;
    }

    .form-control {
        border: 2px solid #e0e7ee;
        border-radius: 8px;
        padding: 10px 15px;
        color: var(--color-darker);
    }

    .form-control:focus {
        border-color: var(--color-primary);
        box-shadow: 0 0 0 0.2rem rgba(15, 194, 192, 0.25);
    }

    .btn-success {
        background: var(--color-tertiary);
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-success:hover {
        background: var(--color-dark);
        color: white;
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }
</style>

<div class="page-header-custom">
    <h1><i class="fas fa-user-edit me-2" style="color: var(--color-secondary);"></i>Editar Aluno</h1>
</div>

<div class="form-container">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Telefone" class="form-label">Telefone</label>
            <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-2"></i>Salvar Alterações
            </button>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fas fa-times me-2"></i>Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
