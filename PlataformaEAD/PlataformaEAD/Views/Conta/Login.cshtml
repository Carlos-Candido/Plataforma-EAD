@using Microsoft.AspNetCore.Identity
@using PlataformaEAD.Models
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@model PlataformaEAD.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PlataformaEAD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --color-primary: #0FC2C0;
            --color-secondary: #0CABA8;
            --color-tertiary: #008F8C;
            --color-dark: #015958;
            --color-darker: #023535;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--color-darker);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: var(--color-dark);
            border-radius: 50%;
            top: -250px;
            right: -250px;
            opacity: 0.4;
            animation: float 6s ease-in-out infinite;
        }

        body::after {
            content: '';
            position: absolute;
            width: 350px;
            height: 350px;
            background: var(--color-tertiary);
            border-radius: 50%;
            bottom: -175px;
            left: -175px;
            opacity: 0.3;
            animation: float 8s ease-in-out infinite reverse;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        .login-container {
            background: white;
            border-radius: 25px;
            box-shadow: 0 25px 70px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            max-width: 420px;
            width: 90%;
            animation: slideIn 0.6s ease-out;
            position: relative;
            z-index: 10;
        }

        @@keyframes slideIn {
            from { 
                opacity: 0; 
                transform: translateY(-30px) scale(0.95); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0) scale(1); 
            }
        }

        .login-header {
            background: var(--color-primary);
            color: white;
            padding: 50px 30px;
            text-align: center;
            position: relative;
        }

        .login-header::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 30px;
            background: white;
            border-radius: 50% 50% 0 0;
        }

        .login-header i {
            font-size: 75px;
            margin-bottom: 15px;
            color: white;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .login-header h2 {
            margin: 0;
            font-weight: 700;
            color: white;
            font-size: 2rem;
        }

        .login-header p {
            color: white;
            opacity: 0.95;
            margin-top: 8px;
        }

        .login-body {
            padding: 50px 35px 40px;
        }

        .form-label {
            color: var(--color-darker);
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid #e0e7ee;
            padding: 13px 15px;
            transition: all 0.3s ease;
            color: var(--color-darker);
            font-size: 0.95rem;
        }

        .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 0.25rem rgba(15, 194, 192, 0.15);
            color: var(--color-darker);
            transform: translateY(-2px);
        }

        .input-group-text {
            background: var(--color-primary);
            border: 2px solid var(--color-primary);
            border-right: none;
            border-radius: 12px 0 0 12px;
            color: white;
            padding: 13px 15px;
        }

        .input-group .form-control {
            border-left: 2px solid var(--color-primary);
            border-radius: 0 12px 12px 0;
        }

        .input-group .form-control:focus {
            border-left-color: var(--color-primary);
        }

        .btn-login {
            background: var(--color-primary);
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            transition: all 0.3s ease;
            color: white;
            box-shadow: 0 4px 15px rgba(15, 194, 192, 0.3);
        }

        .btn-login:hover {
            background: var(--color-secondary);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(15, 194, 192, 0.4);
            color: white;
        }

        .btn-login:active {
            transform: translateY(-1px);
        }

        .form-check-input {
            border: 2px solid #d0d7de;
            border-radius: 5px;
            width: 1.2em;
            height: 1.2em;
        }

        .form-check-input:checked {
            background-color: var(--color-primary);
            border-color: var(--color-primary);
        }

        .form-check-label {
            color: var(--color-darker);
            font-weight: 500;
        }

        .text-muted {
            color: #6c757d !important;
        }

        .text-muted a {
            color: var(--color-primary);
            text-decoration: none;
            font-weight: 700;
            transition: all 0.3s;
        }

        .text-muted a:hover {
            color: var(--color-secondary);
            text-decoration: underline;
        }

        .alert {
            border-radius: 12px;
            border: none;
            box-shadow: 0 2px 10px rgba(220, 53, 69, 0.2);
        }

        @@media (max-width: 576px) {
            body { padding: 10px; }
            .login-container { max-width: 100%; width: 95%; }
            .login-header { padding: 35px 20px; }
            .login-header i { font-size: 55px; }
            .login-header h2 { font-size: 1.6rem; }
            .login-body { padding: 40px 25px 30px; }
            .form-control, .input-group-text { padding: 11px 12px; font-size: 0.9rem; }
            .btn-login { padding: 12px; font-size: 0.9rem; }
        }

        @@media (max-width: 400px) {
            .login-header { padding: 30px 15px; }
            .login-header i { font-size: 50px; }
            .login-header h2 { font-size: 1.4rem; }
            .login-body { padding: 35px 20px 25px; }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-graduation-cap"></i>
            <h2>Plataforma EAD</h2>
            <p class="mb-0">Bem-vindo de volta!</p>
        </div>

        <div class="login-body">
            <form asp-action="Login" asp-controller="Conta" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="seu@email.com" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Senha" class="form-label">Senha</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Senha" class="form-control" placeholder="••••••••" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>

                <div class="mb-4 form-check">
                    <input asp-for="LembrarMe" class="form-check-input" />
                    <label asp-for="LembrarMe" class="form-check-label">Lembrar-me</label>
                </div>

                <button type="submit" class="btn btn-primary btn-login w-100 mb-4">
                    <i class="fas fa-sign-in-alt me-2"></i>Entrar
                </button>

                <div class="text-center text-muted">
                    <small>Não tem uma conta? <a asp-action="Registro">Registre-se aqui</a></small>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>