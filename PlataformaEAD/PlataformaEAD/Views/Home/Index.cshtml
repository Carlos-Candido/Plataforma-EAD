@model PlataformaEAD.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<style>
    :root {
        --color-primary: #0FC2C0;
        --color-secondary: #0CABA8;
        --color-tertiary: #008F8C;
        --color-dark: #015958;
        --color-darker: #023535;
    }

    .welcome-section {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-tertiary) 100%);
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(15, 194, 192, 0.3);
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
        animation: fadeInDown 0.6s ease-out;
    }

    .welcome-section::before {
        content: '';
        position: absolute;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        top: -150px;
        right: -100px;
    }

    .welcome-section h1 {
        color: white;
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
    }

    .welcome-section p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.2rem;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .dashboard-card {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
    }

    .dashboard-card:nth-child(1) { animation-delay: 0.1s; }
    .dashboard-card:nth-child(2) { animation-delay: 0.2s; }
    .dashboard-card:nth-child(3) { animation-delay: 0.3s; }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dashboard-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        transition: all 0.3s ease;
    }

    .dashboard-card.card-alunos::before {
        background: var(--color-primary);
    }

    .dashboard-card.card-cursos::before {
        background: var(--color-tertiary);
    }

    .dashboard-card.card-matriculas::before {
        background: var(--color-secondary);
    }

    .dashboard-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .dashboard-card:hover::before {
        height: 8px;
    }

    .card-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 25px;
        font-size: 2.5rem;
        color: white;
        position: relative;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
    }

    .card-alunos .card-icon {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    }

    .card-cursos .card-icon {
        background: linear-gradient(135deg, var(--color-tertiary) 0%, var(--color-dark) 100%);
    }

    .card-matriculas .card-icon {
        background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-tertiary) 100%);
    }

    .dashboard-card:hover .card-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .card-title {
        color: var(--color-darker);
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 12px;
    }

    .card-description {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .card-stats {
        display: flex;
        gap: 20px;
        margin-bottom: 25px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
    }

    .stat-item {
        flex: 1;
        text-align: center;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: var(--color-darker);
        display: block;
        animation: countUp 1s ease-out;
    }

    @@keyframes countUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stat-label {
        font-size: 0.85rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 14px 30px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        width: 100%;
        text-align: center;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-alunos .card-button {
        background: var(--color-primary);
        color: white;
        box-shadow: 0 4px 15px rgba(15, 194, 192, 0.3);
    }

    .card-alunos .card-button:hover {
        background: var(--color-secondary);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(15, 194, 192, 0.4);
    }

    .card-cursos .card-button {
        background: var(--color-tertiary);
        color: white;
        box-shadow: 0 4px 15px rgba(0, 143, 140, 0.3);
    }

    .card-cursos .card-button:hover {
        background: var(--color-dark);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 143, 140, 0.4);
    }

    .card-matriculas .card-button {
        background: var(--color-secondary);
        color: white;
        box-shadow: 0 4px 15px rgba(12, 171, 168, 0.3);
    }

    .card-matriculas .card-button:hover {
        background: var(--color-tertiary);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(12, 171, 168, 0.4);
    }

    .quick-actions {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
        animation: fadeIn 0.8s ease-out 0.4s both;
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .quick-actions h3 {
        color: var(--color-darker);
        font-weight: 700;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .quick-actions h3 i {
        color: var(--color-primary);
        font-size: 1.5rem;
    }

    .action-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .action-button {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 18px;
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        text-decoration: none;
        color: var(--color-darker);
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .action-button i {
        font-size: 1.5rem;
        color: var(--color-primary);
        transition: all 0.3s ease;
    }

    .action-button:hover {
        background: var(--color-primary);
        border-color: var(--color-primary);
        color: white;
        transform: translateX(5px);
    }

    .action-button:hover i {
        color: white;
        transform: scale(1.2);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .welcome-section {
            padding: 35px 25px;
        }

        .welcome-section h1 {
            font-size: 2rem;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .card-stats {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>

<div class="welcome-section">
    <h1><i class="fas fa-chart-line me-3"></i>Dashboard</h1>
    <p>Bem-vindo à Plataforma EAD! Gerencie alunos, cursos e matrículas de forma eficiente.</p>
</div>

<div class="dashboard-grid">
    <!-- Card Alunos -->
    <div class="dashboard-card card-alunos">
        <div class="card-icon">
            <i class="fas fa-users"></i>
        </div>
        <h3 class="card-title">Alunos</h3>
        <p class="card-description">Gerencie seus alunos cadastrados na plataforma.</p>
        
        <div class="card-stats">
            <div class="stat-item">
                <span class="stat-number">@Model.TotalAlunos</span>
                <span class="stat-label">Total</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@Model.TotalAlunos</span>
                <span class="stat-label">Cadastrados</span>
            </div>
        </div>

        <a asp-controller="Aluno" asp-action="Index" class="card-button">
            <i class="fas fa-arrow-right"></i>
            <span>Acessar</span>
        </a>
    </div>

    <!-- Card Cursos -->
    <div class="dashboard-card card-cursos">
        <div class="card-icon">
            <i class="fas fa-book"></i>
        </div>
        <h3 class="card-title">Cursos</h3>
        <p class="card-description">Crie e gerencie todos os seus cursos disponíveis.</p>
        
        <div class="card-stats">
            <div class="stat-item">
                <span class="stat-number">@Model.TotalCursos</span>
                <span class="stat-label">Total</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@Model.TotalCursos</span>
                <span class="stat-label">Disponíveis</span>
            </div>
        </div>

        <a asp-controller="Curso" asp-action="Index" class="card-button">
            <i class="fas fa-arrow-right"></i>
            <span>Acessar</span>
        </a>
    </div>

    <!-- Card Matrículas -->
    <div class="dashboard-card card-matriculas">
        <div class="card-icon">
            <i class="fas fa-clipboard-list"></i>
        </div>
        <h3 class="card-title">Matrículas</h3>
        <p class="card-description">Controle o status das matrículas dos alunos.</p>
        
        <div class="card-stats">
            <div class="stat-item">
                <span class="stat-number">@Model.TotalMatriculas</span>
                <span class="stat-label">Total</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@Model.MatriculasAtivas</span>
                <span class="stat-label">Ativas</span>
            </div>
        </div>

        <a asp-controller="Matricula" asp-action="Index" class="card-button">
            <i class="fas fa-arrow-right"></i>
            <span>Acessar</span>
        </a>
    </div>
</div>

<div class="quick-actions">
    <h3><i class="fas fa-bolt"></i>Ações Rápidas</h3>
    <div class="action-grid">
        <a asp-controller="Aluno" asp-action="Create" class="action-button">
            <i class="fas fa-user-plus"></i>
            <span>Novo Aluno</span>
        </a>
        <a asp-controller="Curso" asp-action="Create" class="action-button">
            <i class="fas fa-book-medical"></i>
            <span>Novo Curso</span>
        </a>
        <a asp-controller="Matricula" asp-action="Create" class="action-button">
            <i class="fas fa-user-graduate"></i>
            <span>Nova Matrícula</span>
        </a>
    </div>
</div>
